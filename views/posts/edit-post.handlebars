<div>
    <h3>Edit Post</h3>
    <form method="post" action="/admin/p/posts/edit/{{post._id}}?_method=PUT" enctype="multipart/form-data">
        <div class="form-group">

            <input name="title" class="form-control" value="{{post.title}}">
        </div>
        <div class="form-group">

            <textarea name="description"  class="form-text">{{post.description}}</textarea>
        </div>
        <div class="form-group">
            <input name="file" class="form-control-file" type="file"  value="{{post.file}}" />
        </div>
        <div class="form-group">
            <select class="form-control" name="status">
                {{#select post.status}}
                <option value="Private" >Private</option>
                <option value="Public" >Public</option>
                <option value="Protected" >Protected</option>
                {{/select}}
            </select>
        </div>

        <div class="form-group">
            {{#select post.category}}
                <select class="form-control-range" name="category">
                    {{#each categories}}
                        <option value="{{_id}}">{{category}}</option>
                    {{/each}}
                </select>
            {{/select}}
        </div>
        <button class="btn btn-success">Edit Post</button>
    </form>

</div>