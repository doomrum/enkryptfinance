{{> navbar}}
<main class="auth">
    <header>
        <div class="auth__banner">
            <h2 class="auth__heading">Login</h2>
        </div>
    </header>
    {{#if success_message}}
    <div class="success-card mt-1">
        <h2 class="h5">{{success_message}}</h2>
    </div>
    {{/if}}
    {{#if failure_message}}
    <div class="error-msg mgT2">
        <h2 class="h6">{{failure_message}}</h2>
    </div>
    {{/if}}
    <div class="auth__container">

        <form id="signup" class=" auth__form" method="post" action="/auth/register">
            <h1 class="text-primary h1">Account Registration</h1>

            <p class="mt-1 mb-3">Estimated time to complete your registration is 2 Minutes</p>
            <p class="mb-3">Please complete the following form using English alphabet characters only.</p>
            <p class="mb-3"> Please complete the form below by using your first name and surname as they are displayed
                in
                your identity document.</p>
            <p class='mb-3'>Please make sure that emails are from <em class="auth__mail"><a
                        href="mailto:support@enkryptfinance.com">
                        support@enkryptfinance.com
                    </a></em> do not
                get
                marked as spam so that you can receive all communication emails seamlessly.
            </p>
            <h3 class="text-primary mt-2 mb-2">Personal Details</h3>

            <div class="d-flex">
                <div class="flex-column">
                    <div class="auth__inputBox">
                        <input class="form-input" name="firstName" placeholder="First Name" required />
                    </div>
                    <div class="auth__inputBox">
                        <input class="form-input" name="middleName" placeholder="Middle Name" required />

                    </div>
                    <div class="auth__inputBox">
                        <input class="form-input" name="lastName" placeholder="Last Name" required />

                    </div>
                </div>
                <div class="flex-column">
                    <div class="auth__inputBox">
                        <select name="country" class="form-input">
                            {{#each country}}
                            <option>{{name}}</option>
                            {{/each}}
                        </select>

                    </div>
                    <div class="auth__inputBox">
                        <input class="form-input" type="email" name="email" placeholder="Email" required />

                    </div>
                    <div class="auth__inputBox">
                        <input class="form-input" name="password" type="password" placeholder="Password" required />

                    </div>
                </div>
            </div>
            <div class="flex-column">
                <div class="auth__inputBox">
                    <select name="code" id="code" class="form-input">
                        {{#each country}}
                        <option value="{{code}}">{{name}}&nbsp; {{code}}</option>
                        {{/each}}
                    </select>

                </div>
                <div class="auth__inputBox">
                    <input class="form-input" type="tel" name="phone" placeholder="phone" />
                </div>
            </div>
            <div>
                <label for="plan" class="h6">Select Plan</label>
                <div class="auth__inputBox">
                    <select id="plan" name="plan" class="form-input">
                        {{#each plan}}
                        <option value="{{_id}}">{{title}}</option>
                        {{/each}}
                    </select>

                </div>
            </div>
            <div class="d-flex auth__agree">
                <input type="checkbox" name="terms" id="terms">
                <label for="terms">I agree to receive your newsletters, company news, and product
                    updates.</label>
            </div>
            <button id="authBtn" class="btn btn-reg mt-2 mb-2" type="submit">Register</button>
            <div class="auth__account mt-3">
                <p>Already got an Account? </p>
                <a href="/auth/login" class="auth__register">Login</a>
            </div>
        </form>
    </div>
</main>