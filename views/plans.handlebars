<section class="plan-section">
    <div class="container pt-10 pb-10">
        <div class="text-center">
            <h4 class="h3">Pricing and Rates</h4>
            <p class="h5 mt-4">We don't believe in holding back on information.
                Especially on pricing. Get the answers you're looking for. </p>
        </div>
        <h4 class="mt-4 ">BTC Mining</h4>

        <div class="grid mt-4">


            {{#if plan}}
            {{#each plan}}
            <div class="grid-item1_3 plan-card">
                <div class="overlayText">
                    <span>{{title}}</span>
                </div>
                <img class="flowImgP" src="/images/btc.jpg" />
                <h3 class="h4 mgV2">{{title}}</h3>
                <h4 class="h2 mgV2 plan-card-h">${{cost}}</h4>
                <div class="mgV2 plan-details">
                    <ul>
                        <li>{{profit}}</li>
                        <li>{{description}}</li>
                        <!--                            <li>Running on Water</li>-->
                    </ul>
                </div>
                <a href="/auth/signup" class="btn btn-plan plan-btn">
                    Register <i class="las la-arrow-circle-right"></i>
                </a>

            </div>
            {{/each}}
            {{/if}}
        </div>
    </div>
</section>

<section>
    <div class="container pt-10 pb-10">
        <h3 class=" text-center">Detailed Pricing</h3>
        <div class="mt-2 transaction-table-cont">

            <table class="transaction-table">
                <thead>
                    <tr>
                        <th>PLAN</th>
                        <th>COST</th>
                        <th>PROFIT</th>
                        <th> DURATION</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each plan}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{cost}}</td>
                        <td>{{profit}}</td>
                        <td>{{duration}}</td>

                    </tr>

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</section>
<!--END OF PLANS SECTION-->

