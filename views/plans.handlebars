<section class="plan">
    <div class="container pt-10 pb-10">
        <div class="text-center">
            <h4 class="h3">Pricing and Rates</h4>
            <p class="h5 mt-4">We don't believe in holding back on information.
                Especially on pricing. Get the answers you're looking for. </p>
        </div>
<!--        <h4 class="mt-4 ">BTC Mining</h4>-->

        <div class="grid mgT2">
            {{#if plan}}
                {{#each plan}}
                    <div class="grid-item1_4 plan-card">
                        <div class="overlayText">
                            <p class="h6">{{title}}</p>

                        </div>
                        <img alt="{{title}}" class="flowImgP mgT2" src="/images/plan.jpg" />
                        <div class="plan-card-body">

                            <h4 class=" plan-card-h h4 mgT1">${{cost}}</h4>

                            <ul class="mgT2">
                                <li><i class="las la-check-double green-text icon24"></i> <span class="mgL2">{{profit}}</span></li>
                                <li><i class="las la-check-double green-text icon24"></i><span class="mgL2">{{description}}</span> </li>
                            </ul>
                            <div class="mgT3">
                                <a href="/auth/signup" class="plan-btn">
                                    <span>Register </span><i class="las la-arrow-circle-right icon24"></i>
                                </a>
                            </div>

                        </div>


                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
</section>

<section>
    <div class="container pt-10 pb-10">
        <h3 class=" centerText h5">Detailed Pricing</h3>
        <div class="mgT2 transaction-table-cont">

            <table class="transaction-table">
                <thead>
                    <tr>
                        <th>PLAN</th>
                        <th>COST</th>
                        <th>PROFIT</th>
                        <th> DURATION</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each plan}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{cost}}</td>
                        <td>{{profit}}</td>
                        <td>{{duration}}</td>

                    </tr>

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</section>
<!--END OF PLANS SECTION-->

