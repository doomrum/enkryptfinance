<div class="mgT3">
    <a href="/client/withdraw" class="btn btn-green">Withdraw <i class="la la-exchange-alt"></i></a>
    <a href="/client/upgrade" class="btn btn-primary mgL2">Upgrade Plan</a>
</div>

<div class="mgT4">
    <h1 class="h5">Transaction History</h1>
    <div class="transaction-table-cont">
        <table class="transaction-table mgT2">
            <thead>
            <tr><th>Transaction Id</th> <th>BTC Address</th><th><i class="la la-btc"></i>BTC</th><th>status</th></tr>
            </thead>
            <tbody>
           {{#if transactions}}
               {{#each transactions}}
                   <tr><td>{{_id}}</td><td>{{btcAddress}}</td><td>{{amount}}</td><td  class="{{status}}">{{status}}</td></tr>
               {{/each}}
           {{else}}
               <tr class="card">
                   <td colspan="4" class="h5">You Have no transactions</td>
               </tr>
           {{/if}}

            </tbody>
        </table>

    </div>
</div>
