<div>

    <h2 class="h4">Profile</h2>
<p class="h6">Your Details are secure with Us</p>
    <div class="profile-top mgT2 width50 profile-centre">
        <figure class="centre-imgText">
            <img alt="profile image" class="profile-img" src="/images/pexels-enes-ersahin-6988826.jpg"/>
            <a href="/client/profile/edit/{{user._id}}" class="btn btn-primary"><i class="las la-edit"></i> <span>Edit Profile</span></a>
        </figure>

    </div>
    <div class="card width50 mgT2">
        <ul class="profile-data">
            <li class="h5">{{user.fullName}}</li>
            <li class="h5">{{user.email}}</li>
            <li class="h5">{{user.phone}}</li>
            <li class="h5">{{user.country}}</li>
            <li class="h5">{{user.code}}</li>
        </ul>
    </div>
</div>