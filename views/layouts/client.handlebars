<div class="chat_area" id="chat_area">
    <div class="chat_area-top">
        <div>
            <h2 class="h5">EhanceTrade Chat</h2>
            <p class="h7 mgT1">Send Us a message </p>
        </div>
        <i class="la la-minus-circle icon24" id="toggleChatBtn"></i>
    </div>
    <div class="chat_area-body">
        <div class="chat_msg-client">
            <div class="chat_msg-client_title ">
                <h5 class="h6">John Doe</h5>
                <p class="h7">12:01pm</p>
            </div>
            <p>Hello</p>

        </div>
        <div class="chat_msg-support">
            <div class="chat_msg-support_title ">
                <h5 class="h6">Ehancetrade</h5>
                <p class="h7">12:01pm</p>
            </div>
            <p> Hello, Michael What ma we do for you</p>
        </div>


    </div>
    <div class="chart_area-msgBox">
        <form class="chat-form">
            <input placeholder="Type here" />
            <button  class="chat_btn"><i class="la la-send"></i></button>
        </form>
    </div>

</div>

<div class="msg_btn" id="msg_btn">
    <i class="la la-comment-dots"></i>
</div>
<script src="../js/chat.js"></script>
</body>
